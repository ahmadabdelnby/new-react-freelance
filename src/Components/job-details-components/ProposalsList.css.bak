/* Backup of original ProposalsList.css (plist- prefixed styles) */

.plist-container {
  width: 100%;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0;
}

/* Header */
.plist-header {
  margin-bottom: 20px;
}

.plist-title {
  font-size: 14px;
  font-weight: 700;
  color: #001e00;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.plist-count {
  font-size: 14px;
  font-weight: 600;
  color: #00a651;
  background: #e8f5e9;
  padding: 2px 12px;
  border-radius: 16px;
}

